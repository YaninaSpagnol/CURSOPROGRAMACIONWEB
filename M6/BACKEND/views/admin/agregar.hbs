<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control " type="text" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
            {{#if error}}
               <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>

